// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "alt+1",
        "command": "workbench.view.explorer",
        "when": "!sideBarFocus"
    },
    {
        "key": "alt+1",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus"
    },
    {
        "key": "alt+2",
        "command": "workbench.files.action.focusOpenEditorsView",
        "when": "!sideBarFocus"
    },
    {
        "key": "alt+2",
        "command": "workbench.view.explorer",
        "when": "sideBarFocus"
    },
    {
        "key": "alt+3",
        "command": "outline.focus",
        "when": "!sideBarFocus"
    },
    {
        "key": "alt+3",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "sideBarFocus"
    },
    {
        "key": "alt+4",
        "command": "workbench.action.terminal.toggleTerminal"
    },
    // Swap between open terminals (integrated in VS Code)
    {
        "key": "ctrl+shift+right",
        "command": "workbench.action.terminal.focusNextPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+left",
        "command": "workbench.action.terminal.focusPreviousPane",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+up",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+down",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    },
    // Swap between open editor tabs
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "workbench.action.nextEditor"
    },
    // quick file search shortcut
    {
        "key": "alt+o",
        "command": "workbench.action.quickOpen"
    },
    // Open search for open tabs
    {
        "key": "ctrl+e",
        "command": "workbench.action.showAllEditors"
    },
    // remove default keybindings that conflict with existing ones or vim shortcuts
    {
        "key": "ctrl+shift+r",
        "command": "-rerunSearchEditorSearch",
        "when": "inSearchEditor"
    },
    {
        "key": "ctrl+shift+r",
        "command": "-editor.action.refactor",
        "when": "editorHasCodeActionsProvider && textInputFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+r",
        "command": "-workbench.action.quickOpenNavigatePreviousInRecentFilesPicker",
        "when": "inQuickOpen && inRecentFilesPicker"
    },
    {
        "key": "ctrl+y",
        "command": "-redo"
    },
    {
        "key": "ctrl+shift+r",
        "command": "-workbench.action.replaceInFiles"
    },

]