# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
        name = Cristian
        email = cristiand2021@gmail.com

[pull]
    rebase = true

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = false 
    line-numbers-wrap = true
    max-line-length = 200

    plus-style = "syntax auto"
    minus-style = "syntax auto"

    file-style = "orange bold"
    file-decoration-style = "orange box"

    hunk-header-style = "green bold"
    hunk-decoration-style = "green box"

    dark = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

