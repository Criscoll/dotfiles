# This is Git's per-user configuration file.
[user]
# Please adapt and uncomment the following lines:
        name = Cristian
        email = cristiand2021@gmail.com

[pull]
    rebase = true

[core]
    editor = nvim
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    line-numbers = true
    plus-style = "syntax auto"
    minus-style = "syntax auto"
    file-style = box bold orange
    hunk-header-style = box bold green

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

